# -*- mode: snippet -*-
# name: py-dir-locals
# key: py-dir-locals
# --
;;; Directory Local Variables            -*- no-byte-compile: t -*-

;;; For more information see (info "(emacs) Directory Variables")
((python-mode . ((pyvenv-activate . "~/github/${1:path-to-venv}")
                 (eval . (setenv "PYTHONPATH" (concat (file-name-directory (buffer-file-name)) "src"))))))
